<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="basePane" prefHeight="800.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fx.controllers.LoginPageController">
   <stylesheets>
      <URL value="@../css/style.css" />
   </stylesheets>
   <children>
      <Label styleClass="labelWithShadow" fx:id="titleLabel"  alignment="CENTER" contentDisplay="CENTER" layoutX="550.0" layoutY="100.0" prefHeight="70.0" prefWidth="500.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 36px; -fx-font-family: 'Arial Black'; -fx-font-weight: bold;" text="IPL Player Database" textAlignment="CENTER" />
      <Label styleClass="labelWithShadow" layoutX="651.0" layoutY="230.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-family: Arial; -fx-font-weight: bold;" text="Club Name" />
      <TextField fx:id="inputClubName" layoutX="650.0" layoutY="260.0" onAction="#onLoginButtonClick" prefHeight="50.0" prefWidth="300.0" promptText="Club name" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #2c3e50; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10px;" />
      <Label styleClass="labelWithShadow" layoutX="651.0" layoutY="340.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-family: Arial; -fx-font-weight: bold;" text="Password" />
      <PasswordField fx:id="inputPassword" layoutX="650.0" layoutY="370.0" onAction="#onLoginButtonClick" prefHeight="50.0" prefWidth="300.0" promptText="Password" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #2c3e50; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10px;" />
      <Button fx:id="loginButton" layoutX="650.0" layoutY="450.0" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-font-size: 18px;" text="Login" />
      <AnchorPane fx:id="sideBar" prefHeight="800.0" prefWidth="300.0">
         <children>
            <ImageView fx:id="logoImageView" fitHeight="170.0" fitWidth="170.0" layoutX="65.0" layoutY="190.0" pickOnBounds="true" preserveRatio="true" />
            <Label styleClass="labelWithShadow" fx:id="clubNameLabel2" alignment="CENTER" layoutX="5.0" layoutY="125.0" prefHeight="40.0" prefWidth="290.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-family: 'Arial Black'; -fx-font-weight: bold;" text="IPL Player Database" />
            <ImageView fx:id="avatarImageView" fitHeight="170.0" fitWidth="170.0" layoutX="65.0" layoutY="380.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
      <Button fx:id="exitButton" layoutX="650.0" layoutY="520.0" mnemonicParsing="false" onAction="#onExitButtonClick" prefHeight="50.0" prefWidth="300.0" style="-fx-font-size: 18px;" text="Exit" />
   </children>
</AnchorPane>
