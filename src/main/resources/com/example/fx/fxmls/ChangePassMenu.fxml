<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="basePane" prefHeight="800.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fx.controllers.ChangePassMenuController">

    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>

    <Button fx:id="backButton" layoutX="320.0" layoutY="20.0" onAction="#onBackButtonClick" prefHeight="40.0" prefWidth="80.0" style="-fx-font-size: 14px;" text="Back" />
   <PasswordField fx:id="currentPassInput" layoutX="650.0" layoutY="235.0" onAction="#onChangePassClick" prefHeight="50.0" prefWidth="300.0" promptText="Current Password" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #2c3e50; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10px;" />
   <Label layoutX="651.0" layoutY="205.0" prefHeight="21.0" prefWidth="250.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-family: Arial; -fx-font-weight: bold;" styleClass="labelWithShadow" text="Current Password" />
   <Label layoutX="651.0" layoutY="315.0" prefWidth="250.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-family: Arial; -fx-font-weight: bold;" styleClass="labelWithShadow" text="New Password" />
   <PasswordField fx:id="newPassInput" layoutX="650.0" layoutY="345.0" onAction="#onChangePassClick" prefHeight="50.0" prefWidth="300.0" promptText="New Password" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #2c3e50; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10px;" />
   <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="550.0" layoutY="100.0" prefHeight="70.0" prefWidth="500.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 36px; -fx-font-family: 'Arial Black'; -fx-font-weight: bold;" styleClass="labelWithShadow" text="Change Password" textAlignment="CENTER" />
   <Label layoutX="651.0" layoutY="425.0" prefHeight="21.0" prefWidth="250.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-family: Arial; -fx-font-weight: bold;" styleClass="labelWithShadow" text="Confirm New Password" />
   <PasswordField fx:id="confirmPassInput" layoutX="650.0" layoutY="455.0" onAction="#onChangePassClick" prefHeight="50.0" prefWidth="300.0" promptText="Confirm New Password" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-prompt-text-fill: #2c3e50; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 10px;" />
   <Button fx:id="loginButton" layoutX="650.0" layoutY="535.0" mnemonicParsing="false" onAction="#onChangePassClick" prefHeight="50.0" prefWidth="300.0" style="-fx-font-size: 18px;" text="Change Password" />
   <AnchorPane fx:id="sideBar" prefHeight="800.0" prefWidth="300.0">
      <children>
         <Button fx:id="logoutButton" layoutX="50.0" layoutY="470.0" onAction="#onLogoutButtonClick" prefHeight="60.0" prefWidth="200.0" style="-fx-font-size: 18px;" text="Log Out" />
         <Label fx:id="clubNameLabel2" alignment="CENTER" layoutX="5.0" layoutY="130.0" prefHeight="60.0" prefWidth="290.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-family: 'Arial Black'; -fx-font-weight: bold;" styleClass="labelWithShadow" text="IPL Player Database" />
         <StackPane layoutX="40.0" layoutY="210.0" prefHeight="220.0" prefWidth="220.0">
            <children>
               <ImageView fx:id="logoImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" style="-fx-alignment: CENTER" />
            </children>
         </StackPane>
      </children>
   </AnchorPane>


</AnchorPane>
