<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="basePane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fx.controllers.MainMenuController">
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
    <children>
        <Label fx:id="clubNameLabel1" alignment="CENTER" layoutX="425.0" layoutY="100.0" prefHeight="70.0" prefWidth="750.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 36px; -fx-font-family: 'Arial Black'; -fx-font-weight: bold;" styleClass="labelWithShadow" text="IPL Player Database" />
        <VBox alignment="CENTER" layoutX="600.0" layoutY="165.0" prefHeight="470.0" prefWidth="400.0" spacing="25.0">
            <children>
                <Button fx:id="searchPlayerButton" onAction="#onSearchPlayerClick" prefHeight="60.0" prefWidth="300.0" style="-fx-font-size: 18px;" text="Search Players" />
                <Button fx:id="searchClubButton" onAction="#onSearchClubClick" prefHeight="60.0" prefWidth="300.0" style="-fx-font-size: 18px;" text="Search Club" />
                <Button fx:id="buyPlayerButton" onAction="#onBuyPlayerClick" prefHeight="60.0" prefWidth="300.0" style="-fx-font-size: 18px;" text="Buy Players" />
                <Button fx:id="sellPlayerButton" onAction="#onSellPlayerClick" prefHeight="60.0" prefWidth="300.0" style="-fx-font-size: 18px;" text="Sell Players" />
            <Button fx:id="countryWiseCountButton" mnemonicParsing="false" onAction="#onChangePassClick" prefHeight="60.0" prefWidth="300.0" style="-fx-font-size: 18px;" text="Change Password" />
            </children>
        </VBox>
      <AnchorPane fx:id="sideBar" prefHeight="800.0" prefWidth="300.0">
         <children>
                <Button fx:id="logoutButton" layoutX="50.0" layoutY="470.0" onAction="#onLogoutButtonClick" prefHeight="60.0" prefWidth="200.0" style="-fx-font-size: 18px;" text="Log Out" />
            <Label fx:id="clubNameLabel2" alignment="CENTER" layoutX="5.0" layoutY="130.0" prefHeight="60.0" prefWidth="290.0" style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-family: 'Arial Black'; -fx-font-weight: bold;" styleClass="labelWithShadow" text="IPL Player Database" />
            <StackPane layoutX="40.0" layoutY="210.0" prefHeight="220.0" prefWidth="220.0">
               <children>
                  <ImageView fx:id="logoImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" style="-fx-alignment: CENTER" />
               </children>
            </StackPane>
         </children>
      </AnchorPane>
    </children>
</AnchorPane>
